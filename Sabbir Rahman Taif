<?php

$year = "1992";

if ($year == 1990) {
  echo $year,"."," ","Welcome!";
}
elseif ($year <= 1995) {
  echo $year,"."," ","you are authorized to enter";
}
elseif ($year > 1995) {
  echo $year,"."," ","you are not authorized to enter";
}
elseif ($year == 2000) {
  echo $year, "."," ","you are a child";
}
else {
  echo $year,"."," ","Please enter your Birth year";
}
?>

